# RapidRide Backend Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGO_URL=mongodb://localhost:27017/rapidride
# For MongoDB Atlas (cloud):
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/rapidride?retryWrites=true&w=majority

# JWT Secret Key (use a long random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server Configuration
PORT=5500
NODE_ENV=development

# Optional: Add these for production features
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your_sendgrid_api_key
# SMS_SERVICE=twilio
# SMS_ACCOUNT_SID=your_twilio_sid
# SMS_AUTH_TOKEN=your_twilio_token
# PAYMENT_GATEWAY=stripe
# STRIPE_SECRET_KEY=your_stripe_secret_key
